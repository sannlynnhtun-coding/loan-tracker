@model LoanTypeRequest

@{
    ViewData["Title"] = "Update Product";
    ViewData["PageHeader"] = "Product Modification";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Loan Types
        </a>
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight mt-4">Modify Product Details</h1>
        <p class="text-slate-500 mt-1">Updating settings for <span class="text-rose-600 font-semibold">@Model.LoanTypeName</span>.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-sm overflow-hidden">
        <form asp-action="Edit" class="p-10 space-y-8">
            <input type="hidden" asp-for="LoanTypeId" />
            <div class="space-y-6">
                <!-- Product Name -->
                <div class="space-y-2">
                    <label asp-for="LoanTypeName" class="text-sm font-bold text-slate-700">Product Name</label>
                    <input asp-for="LoanTypeName" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-rose-500/10 focus:border-rose-500 transition-all outline-none" />
                    <span asp-validation-for="LoanTypeName" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Description -->
                <div class="space-y-2">
                    <label asp-for="Description" class="text-sm font-bold text-slate-700">Product Description</label>
                    <textarea asp-for="Description" rows="5" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-rose-500/10 focus:border-rose-500 transition-all outline-none resize-none"></textarea>
                    <span asp-validation-for="Description" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>
            </div>

            <div class="pt-8 border-t border-slate-100 flex items-center justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-3 font-semibold text-slate-600 hover:bg-slate-50 rounded-2xl transition-all">Cancel</a>
                <button type="submit" class="px-10 py-4 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-2xl shadow-xl shadow-rose-100 transition-all active:scale-95">
                    Update Product
                </button>
            </div>
        </form>
    </div>
</div>
