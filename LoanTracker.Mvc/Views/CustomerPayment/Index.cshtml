@model List<CustomerPaymentResponse>

@{
    ViewData["Title"] = "Payment History";
    ViewData["PageHeader"] = "Financial Ledger";
}

<div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
    <div>
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Payment Ledger</h1>
        <p class="text-slate-500 mt-1">Review all transaction history and payment status updates.</p>
    </div>
    <a asp-action="Create" class="inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-2xl shadow-lg shadow-emerald-200 transition-all duration-200 group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Record Payment
    </a>
</div>

<div class="bg-white rounded-3xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 border-b border-slate-200 text-xs font-semibold text-slate-500 uppercase tracking-wider">
                    <th class="px-8 py-5">Transaction ID</th>
                    <th class="px-8 py-5">Schedule Ref</th>
                    <th class="px-8 py-5">Payment Date</th>
                    <th class="px-8 py-5">Amount Paid</th>
                    <th class="px-8 py-5">Late Fees</th>
                    <th class="px-8 py-5">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-50/50 transition-colors">
                        <td class="px-8 py-5">
                            <span class="text-sm font-bold text-slate-800 font-mono">#TXN-@item.PaymentId</span>
                        </td>
                        <td class="px-8 py-5 text-sm text-slate-500 font-medium">
                            SCH #@item.ScheduleId
                        </td>
                        <td class="px-8 py-5 text-sm font-semibold text-slate-600">
                            @item.PaymentDate.ToString("MMM dd, yyyy")
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm font-bold text-emerald-600">@item.AmountPaid.ToString("C")</span>
                        </td>
                        <td class="px-8 py-5">
                            <span class="text-sm font-medium @(item.LateFee > 0 ? "text-rose-500" : "text-slate-400")">
                                @(item.LateFee?.ToString("C") ?? "$0.00")
                            </span>
                        </td>
                        <td class="px-8 py-5">
                            @{
                                var statusClass = item.Status?.ToLower() switch
                                {
                                    "completed" => "bg-emerald-100 text-emerald-700",
                                    "pending" => "bg-amber-100 text-amber-700",
                                    _ => "bg-primary-100 text-primary-700"
                                };
                            }
                            <span class="px-3 py-1 text-[10px] font-bold rounded-full border border-current @statusClass uppercase tracking-wider">
                                @(item.Status ?? "Processed")
                            </span>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="px-8 py-20 text-center">
                            <div class="flex flex-col items-center">
                                <div class="w-16 h-16 bg-slate-50 text-slate-300 rounded-full flex items-center justify-center mb-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-slate-800">No transactions recorded</h3>
                                <p class="text-slate-500 mt-1">Record your first customer payment to start the ledger.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
