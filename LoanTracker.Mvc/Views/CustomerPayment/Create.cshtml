@model CustomerPaymentRequest

@{
    ViewData["Title"] = "Record Payment";
    ViewData["PageHeader"] = "Transaction Input";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Ledger
        </a>
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight mt-4">Record New Payment</h1>
        <p class="text-slate-500 mt-1">Identify the payment schedule and enter transaction details.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-sm overflow-hidden">
        <form asp-action="Create" class="p-10 space-y-8">
            <div class="grid grid-cols-1 gap-6">
                <!-- Schedule ID -->
                <div class="space-y-2">
                    <label asp-for="ScheduleId" class="text-sm font-bold text-slate-700">Schedule Reference ID</label>
                    <input asp-for="ScheduleId" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-emerald-500/10 focus:border-emerald-500 transition-all outline-none" placeholder="e.g. 1042" />
                    <span asp-validation-for="ScheduleId" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Payment Date -->
                <div class="space-y-2">
                    <label asp-for="PaymentDate" class="text-sm font-bold text-slate-700">Execution Date</label>
                    <input asp-for="PaymentDate" type="date" value="@Model.PaymentDate.ToString("yyyy-MM-dd")" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-emerald-500/10 focus:border-emerald-500 transition-all outline-none" />
                    <span asp-validation-for="PaymentDate" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Amount Paid -->
                    <div class="space-y-2">
                        <label asp-for="AmountPaid" class="text-sm font-bold text-slate-700">Principal Amount Paid</label>
                        <div class="relative">
                            <span class="absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 font-bold">$</span>
                            <input asp-for="AmountPaid" class="w-full pl-10 pr-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl font-bold text-emerald-600 focus:bg-white focus:ring-4 focus:ring-emerald-500/10 focus:border-emerald-500 transition-all outline-none" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="AmountPaid" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                    </div>

                    <!-- Late Fee -->
                    <div class="space-y-2">
                        <label asp-for="LateFee" class="text-sm font-bold text-slate-700">Late Fee / Penalty</label>
                        <div class="relative">
                            <span class="absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 font-bold">$</span>
                            <input asp-for="LateFee" class="w-full pl-10 pr-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl font-bold text-rose-500 focus:bg-white focus:ring-4 focus:ring-emerald-500/10 focus:border-emerald-500 transition-all outline-none" placeholder="0.00" />
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="space-y-2">
                    <label asp-for="Status" class="text-sm font-bold text-slate-700">Transaction Status</label>
                    <select asp-for="Status" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-emerald-500/10 focus:border-emerald-500 transition-all outline-none appearance-none">
                        <option value="Completed">Completed</option>
                        <option value="Pending">Pending</option>
                        <option value="Failed">Failed</option>
                    </select>
                </div>
            </div>

            <div class="pt-10 border-t border-slate-100 flex items-center justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-3 font-semibold text-slate-600 hover:bg-slate-50 rounded-2xl transition-all">Cancel</a>
                <button type="submit" class="px-10 py-4 bg-emerald-600 hover:bg-emerald-700 text-white font-bold rounded-2xl shadow-xl shadow-emerald-100 transition-all active:scale-95">
                    Execute Transaction
                </button>
            </div>
        </form>
    </div>
</div>
