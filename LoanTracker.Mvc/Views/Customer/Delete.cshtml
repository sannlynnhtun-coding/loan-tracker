@model CustomerResponse

@{
    ViewData["Title"] = "Delete Customer";
    ViewData["PageHeader"] = "Danger Zone";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Customers
        </a>
    </div>

    <div class="bg-white rounded-3xl border border-rose-100 shadow-2xl overflow-hidden">
        <div class="p-10 text-center">
            <div class="w-20 h-20 bg-rose-50 text-rose-500 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Are you absolutely sure?</h1>
            <p class="text-slate-500 mt-4 max-w-md mx-auto">
                You are about to delete <span class="font-bold text-slate-800">@Model.CustomerName</span>. This action cannot be undone and will lose all associated data for this customer.
            </p>
            
            <div class="mt-8 p-6 bg-slate-50 rounded-2xl border border-slate-100 grid grid-cols-2 gap-4 text-left">
                <div>
                    <p class="text-xs uppercase font-bold text-slate-400 tracking-wider">NRC</p>
                    <p class="text-sm font-medium text-slate-700 mt-1">@Model.Nrc</p>
                </div>
                <div>
                    <p class="text-xs uppercase font-bold text-slate-400 tracking-wider">Mobile No</p>
                    <p class="text-sm font-medium text-slate-700 mt-1">@Model.MobileNo</p>
                </div>
            </div>

            <form asp-action="Delete" class="mt-10 flex flex-col sm:flex-row items-center justify-center space-y-3 sm:space-y-0 sm:space-x-4">
                <input type="hidden" asp-for="CustomerId" />
                <a asp-action="Index" class="w-full sm:w-auto px-8 py-3 font-semibold text-slate-600 hover:bg-slate-50 rounded-2xl transition-all border border-slate-200">
                    No, Cancel
                </a>
                <button type="submit" class="w-full sm:w-auto px-10 py-3 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-2xl shadow-lg shadow-rose-200 transition-all active:scale-95">
                    Yes, Delete Permanent
                </button>
            </form>
        </div>
    </div>
</div>
