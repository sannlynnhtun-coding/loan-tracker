@model CustomerLoanRequest

@{
    ViewData["Title"] = "Issue New Loan";
    ViewData["PageHeader"] = "Loan Origination";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Portfolio
        </a>
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight mt-4">Loan Issuance</h1>
        <p class="text-slate-500 mt-1">Set the terms and select the customer for this new credit facility.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-sm overflow-hidden">
        <form asp-action="Create" class="p-10 space-y-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Customer Selection -->
                <div class="space-y-2">
                    <label asp-for="CustomerId" class="text-sm font-bold text-slate-700">Select Customer</label>
                    <select asp-for="CustomerId" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none appearance-none">
                        <option value="">-- Choose Customer --</option>
                        @if (ViewBag.Customers != null)
                        {
                            foreach (var customer in (List<CustomerResponse>)ViewBag.Customers)
                            {
                                <option value="@customer.CustomerId">@customer.CustomerName (@customer.Nrc)</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CustomerId" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Loan Type Selection -->
                <div class="space-y-2">
                    <label asp-for="LoanTypeId" class="text-sm font-bold text-slate-700">Loan Product</label>
                    <select asp-for="LoanTypeId" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none appearance-none">
                        <option value="">-- Choose Product --</option>
                        @if (ViewBag.LoanTypes != null)
                        {
                            foreach (var type in (List<LoanTypeResponse>)ViewBag.LoanTypes)
                            {
                                <option value="@type.LoanTypeId">@type.LoanTypeName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="LoanTypeId" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Principal Amount -->
                <div class="space-y-2">
                    <label asp-for="PrincipalAmount" class="text-sm font-bold text-slate-700">Principal Amount</label>
                    <div class="relative">
                        <span class="absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 font-bold">$</span>
                        <input asp-for="PrincipalAmount" class="w-full pl-10 pr-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 font-bold focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="PrincipalAmount" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Interest Rate -->
                <div class="space-y-2">
                    <label asp-for="InterestRate" class="text-sm font-bold text-slate-700">Interest Rate (%)</label>
                    <input asp-for="InterestRate" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 font-bold focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none" placeholder="e.g. 5.5" />
                    <span asp-validation-for="InterestRate" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Loan Term -->
                <div class="space-y-2">
                    <label asp-for="LoanTerm" class="text-sm font-bold text-slate-700">Term (Months)</label>
                    <input asp-for="LoanTerm" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none" placeholder="e.g. 12" />
                    <span asp-validation-for="LoanTerm" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Start Date -->
                <div class="space-y-2">
                    <label asp-for="LoanStartDate" class="text-sm font-bold text-slate-700">Commencement Date</label>
                    <input asp-for="LoanStartDate" type="date" value="@Model.LoanStartDate.ToString("yyyy-MM-dd")" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none" />
                    <span asp-validation-for="LoanStartDate" class="text-xs text-rose-500 mt-1 block font-medium"></span>
                </div>

                <!-- Repayment Frequency -->
                <div class="space-y-2">
                    <label asp-for="RepaymentFrequency" class="text-sm font-bold text-slate-700">Repayment Frequency</label>
                    <select asp-for="RepaymentFrequency" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-800 focus:bg-white focus:ring-4 focus:ring-amber-500/10 focus:border-amber-500 transition-all outline-none appearance-none">
                        <option value="Monthly">Monthly</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Quarterly">Quarterly</option>
                    </select>
                </div>
            </div>

            <div class="pt-10 border-t border-slate-100 flex items-center justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-3 font-semibold text-slate-600 hover:bg-slate-50 rounded-2xl transition-all">Cancel</a>
                <button type="submit" class="px-10 py-4 bg-amber-500 hover:bg-amber-600 text-white font-bold rounded-2xl shadow-xl shadow-amber-100 transition-all active:scale-95">
                    Authorize Loan
                </button>
            </div>
        </form>
    </div>
</div>
