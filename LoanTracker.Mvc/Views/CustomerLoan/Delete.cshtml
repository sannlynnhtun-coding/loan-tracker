@model CustomerLoanResponse

@{
    ViewData["Title"] = "Void Loan";
    ViewData["PageHeader"] = "Loan Termination";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Portfolio
        </a>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-rose-100 shadow-2xl overflow-hidden">
        <div class="p-10 text-center">
            <div class="w-20 h-20 bg-rose-50 text-rose-500 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Void this Loan?</h1>
            <p class="text-slate-500 mt-4 max-w-md mx-auto leading-relaxed">
                You are about to permanently remove Loan <span class="text-rose-600 font-bold font-mono">#@Model.LoanId</span>. This action cannot be reversed and all payment schedules will be deleted.
            </p>
            
            <div class="mt-8 p-8 bg-slate-50 rounded-3xl border border-slate-100 flex flex-col space-y-4 text-left">
                <div class="flex justify-between items-center">
                    <span class="text-xs uppercase font-bold text-slate-400">Customer</span>
                    <span class="text-sm font-bold text-slate-800">@(Model.CustomerName ?? "ID: " + Model.CustomerId)</span>
                </div>
                <div class="flex justify-between items-center border-t border-slate-200/50 pt-4">
                    <span class="text-xs uppercase font-bold text-slate-400">Amount Outstanding</span>
                    <span class="text-sm font-bold text-rose-600">@Model.TotalAmount.ToString("C")</span>
                </div>
            </div>

            <form asp-action="Delete" class="mt-10 flex flex-col sm:flex-row items-center justify-center space-y-3 sm:space-y-0 sm:space-x-4">
                <input type="hidden" asp-for="LoanId" />
                <a asp-action="Index" class="w-full sm:w-auto px-8 py-3 font-semibold text-slate-600 hover:bg-slate-50 rounded-2xl transition-all border border-slate-200">
                    No, Go Back
                </a>
                <button type="submit" class="w-full sm:w-auto px-10 py-4 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-2xl shadow-xl shadow-rose-100 transition-all active:scale-95">
                    Void Loan Permanent
                </button>
            </form>
        </div>
    </div>
</div>
